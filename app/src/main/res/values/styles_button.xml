<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Material.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Material.MediumComponent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Material.Button.Primary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Material.Button.Secondary">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Material.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="iconEndPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconStartPadding">0dp</item>
    </style>


</resources>
