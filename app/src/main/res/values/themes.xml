<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme, all common styling here -->
    <style name="Base.Material" parent="@style/Theme.MaterialComponents.Light.NoActionBar">

        <!-- Material shape attributes -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Material.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Material.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Material.LargeComponent
        </item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Material.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Material.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Material.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Material.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Material.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Material.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Material.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Material.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Material.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Material.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Material.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Material.Overline</item>

        <!--Platform attributes-->
        <item name="android:screenOrientation">landscape</item>
        <item name="android:dividerHeight">1dp</item>

        <!--Default styles-->
        <item name="cardViewStyle">@style/Widget.Material.CardView</item>
        <item name="materialButtonStyle">@style/Widget.Material.Button</item>
        <item name="switchStyle">@style/Widget.Material.Switch</item>
        <item name="textInputStyle">@style/Widget.Material.TextInputLayout</item>
        <item name="toolbarStyle">@style/Widget.Material.Toolbar</item>

    </style>

    <style name="Material" parent="@style/Base.Material">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

</resources>
